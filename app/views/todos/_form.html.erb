    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control", rows: "10" %>
  </div>


  <div class="form-check form-switch mb-4">
    <%= form.label :is_accomplished, class: "form-check-label" %>
    <%= form.check_box :is_accomplished, class: "form-check-input" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-outline-indigo" %>
  </div>
